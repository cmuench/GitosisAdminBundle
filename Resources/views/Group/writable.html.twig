{% extends "N98GitosisAdminBundle:Layout:page.html.twig" %}
{% import "form_macros.html.twig" as form_macros %}

{% block content %}
    <h2>{{ 'Group'|trans }} {{ group }}: {{ 'Writable Repositories'|trans }}</h2>

    <form action="#" method="post">
        {{ form_errors(form) }}
        {{ form_macros.checkbox_table(form.writable) }}
        {{ form_rest(form) }}
        <input class="btn btn-primary" type="submit" name="submit" value="{{ 'save'|trans }}" />

    </form>

{% endblock %}