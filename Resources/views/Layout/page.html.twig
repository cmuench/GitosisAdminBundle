        {% for flash in flashMessages %}
            <div class="alert alert-block alert-{{ type }}">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <p>{{ flash }}</p>
            </div>
        {% endfor %}
    {% endfor %}
{% endblock flash %}

<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            {% block content %}
            {% endblock %}
        </div>
    </div>
</div>

